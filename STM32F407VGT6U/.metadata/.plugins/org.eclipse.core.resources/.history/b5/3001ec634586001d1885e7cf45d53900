#include <stdio.h>
#include <stdint.h>


// Definition der Adresse des RCC-Peripherie-Clock-Enable-Registers (RCC_AHB1ENR)
#define RCC_AHB1ENR ((volatile uint32_t*) 0x40023830)

// Definition der Adresse des GPIOD_MODER-Registers (GPIO-Port D, Modus-Register)
#define GPIOD_MODER ((volatile uint32_t*) 0x40020C00)

// Definition der Adresse des GPIOD_BSRR-Registers (GPIO-Port D, Bit Set/Reset-Register)
#define GPIOD_BSRR ((volatile uint32_t*) 0x40020C18)

int main(void)
{
    /* Loop forever */

	   // Aktiviere den Clock für den GPIO-Port D
	   *RCC_AHB1ENR |= (1 << 3);

	   // Setze den Modus für den Pin 12 des GPIO-Ports D auf Output (Ausgang)
	   *GPIOD_MODER |= (1 << 24);

	   // Setze den Pin 12 des GPIO-Ports D auf logische 1 (einschalten der LED)
	   *GPIOD_BSRR = (1 << 12);

	   // Endlosschleife
	   while (1) { }

	   return 0;




//	printf("Ich bin jetzt mit Nina zusammedn^\n");

	for(;;);
}
